package com.praveen.batch;

import org.springframework.batch.core.Job;
import org.springframework.batch.core.JobExecution;
import org.springframework.batch.core.JobParameters;
import org.springframework.batch.core.JobParametersBuilder;
import org.springframework.batch.core.launch.JobLauncher;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;

import java.util.Date;

@Component
public class BatchScheduler {

    @Autowired
    private JobLauncher jobLauncher;

    @Autowired
    @Qualifier("exportAdjustmentInfoJob")
    private Job exportAdjustmentJob;

    @Scheduled(cron = "0 0 2 * * *")
    public void runAdjustmentInfoJob() throws Exception {
        JobParameters params = new JobParametersBuilder()
                .addDate("runDate", new Date())
                .toJobParameters();

        System.out.println("Starting exportAdjustmentInfoJob...");
        JobExecution execution = jobLauncher.run(exportAdjustmentJob, params);
        System.out.println("Adjustment Job Status: " + execution.getStatus());
    }
}
